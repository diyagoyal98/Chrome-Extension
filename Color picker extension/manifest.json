{
    "name":"Color Picker",
    "description":"A color picker extension",
    "version":"0.01",
    "manifest_version":3,
    "background":{
        "service_worker":"background.js"
    },
    "action":{
        "default_popup":"popup.html"
    },
    "icons":{
        "16": "picker_16.png",
        "32": "picker_32.png",
        "48": "picker_48.png"
    },
    "permissions":[
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html"

}
